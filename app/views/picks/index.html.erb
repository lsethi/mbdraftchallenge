<div class="jumbotron">
  <div class="container">
    <div class="col-xs-12 col-sm-12 col-md-12 ">
      <h1>The Pre-Draft Board</h1>
      <h3>Match NFL prospects with teams for a chance to win $10,000!</h3>
      <p>Sign up for free. Earn points with each correct team pick.</p>
      <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
    </div>
  </div>
</div>

<!-- <div class="container"> -->

  <div class="panel panel-default">
    <div class="panel-heading"></div>
      <div class="row isotope-container">
        <div class="col-xs-12 col-sm-12 col-md-12 ">

          <table class="table" align="left">
            <head>
                <tr>
                  <th><h4>Order</h4></th>
                  <th></th>
                  <th><h4>Team</h4></th>
                  <th><h4>Projection</h4></th>
                  <th><h4>Controls</h4></th>
                </tr>
            </head>

            <tbody>
                <% @picks.each do |pick| %>
                <tr>
                  <td>
                    <h4 class="todo_list_title"><%= pick.order %></h4>
                  </td>
                  <td>
                    <%= link_to (image_tag pick.team.helmet.url, :height => '25px', :width => '25px' ) %>
                  </td>
                  <td>
                    <h4 class="todo_list_title"><%= link_to pick.team.city, pick %> <%= link_to pick.team.name, pick %></h4>
                  </td>

                  <td>
                    <p class="todo_list_title"><%= link_to pick.draftee.info, pick.draftee %> to go at #<%= pick.number %>.</p>
                  </td>
                  <td>
                    <div class="btn-group btn-group-md">
                      <%= link_to icon('edit'), edit_pick_path(pick), class: "btn btn-lg btn-primary" %>
                    </div>

                    <div class="btn-group btn-group-md">
                      <%= link_to icon('check-square-o'), pick, class: "btn btn-lg btn-success" %>
                    </div>

                    <div class="btn-group btn-group-md">
                      <%= link_to icon('minus-circle'), pick_path(pick), class: "btn btn-lg btn-danger", method: :delete, data: { confirm: "Are you sure??" } %>
                    </div>

                    <div class="btn-group btn-group-md">
                      <%#= link_to "Save This Pick", pick_path(pick), class: "btn btn-sm btn-warning", method: :patch, data: { confirm: "This pick will be added to your draft board!" } %>
                    </div>
                  </td>
                  <td>
<!--                     <div class="btn-group btn-group-md">
                      <%#= link_to "Lock it In!", pick_path(pick), class: "btn btn-sm btn-success", method: :delete, data: { confirm: "Are you sure??" } %>
                    </div>
                  </td> -->
                </tr>
                <% end %>
            </tbody>
          </table>

        </div>
      </div>

  </div>
<!-- </div> -->
<div class="btn-group btn-group-md">
  <%= link_to "Add New Pick", new_pick_path, class: "btn btn-sm btn-warning" %>
</div>
<br/>


