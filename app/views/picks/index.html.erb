<!-- DRAFT BOARD -->
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="panel panel-primary">
    <div class="panel-heading">My Draft Board</div>
      <div class="row isotope-container">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

          <table class="table" align="left" class="col-xs-12 col-sm-12 col-md-12 col-lg-12" >
            <head>
                <tr>
                  <th><h4>Order</h4></th>
                  <th></th>
                  <th><h4>Team</h4></th>
                  <th><h4>Picks & Scores</h4></th>
                  <th><h4>Bonus</h4></th>
                  <th><h4>Total</h4></th>
                  <th><h4>Reset</h4></th>
                </tr>
            </head>

            <tbody>
                <% @picks.each do |pick| %>
                <tr>
<!-- ORDER -->
                  <td>
                    <h4 class="todo_list_title"><%= pick.order %></h4>
                  </td>
<!-- HELMET - BLANK -->
                  <td>
                    <%= link_to (image_tag pick.team.helmet.url, :height => '25px', :width => '25px' ) %>
                  </td>
<!-- TEAM -->
                  <td>
                    <h4 class="todo_list_title"><%= link_to pick.team.city, pick.team %> <%= link_to pick.team.name, pick.team %></h4>
                  </td>
<!-- PICKS & SCORES -->
                    <!-- 1ST ROUND PICK INPUTS -->
                              <%= simple_form_for(pick) do |f| %>
                              <td>
                                <p class="todo_list_title"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span> <%= link_to pick.draftee.info, pick.draftee %> to go in the 1st round<%#= pick.number.ordinalize %>.

                                  <% if pick.draftee.info == pick.team.draftee.info %>
                                    <span class="badge" style="color:orange">+ <%= pick.score1.to_i %></span></p>
                                  <% else %>
                                    <span class="badge" style="color:white">0</span>
                                  <% end %>
                                </p>
                                <div class="form-inputs">
                                  <%= f.collection_select :draftee_id, Draftee.order('info ASC').all, :id, :info, { prompt: "1st round pick's name" }, input_html: { class: "dropdown-toggle" }   %>
                                </div>
                                </br>
                    <!-- 2ND ROUND PICK INPUTS -->
                                <p class="todo_list_title"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span> <%= link_to pick.second.info, pick.second %> to go in the 2nd<%#= pick.number.ordinalize %>.

                                  <% if pick.second.info == pick.team.second.info  %>
                                    <span class="badge" style="color:orange">+ <%= pick.score2.to_i %></span></p>
                                  <% else %>
                                    <span class="badge" style="color:white">0</span></p>
                                  <% end %>
                                </p>
                                <div class="form-inputs">
                                  <%= f.collection_select :second_id, Second.order('info ASC').all, :id, :info, { prompt: "2nd round pick's name" }, input_html: { class: "dropdown-toggle" }   %>
                                </div>
                                </br>
                    <!-- SUBMIT BUTTON -->
                                  <div class="form-actions">
                                    <%= f.button :submit, "Lock in Picks", class: "my-button" %>
                                  </div>
                              <% end %>
                              </td>
<!-- BONUS -->
                  <td>
                      <p><span class="badge badge-success" style="color:yellow"><%= pick.bonus.to_f %></span></p>
                  </td>
<!-- TOTALS -->
                  <td>
                      <p><span class="badge badge-success style=color:white"><%= pick.total.to_f %></span></p>
                  </td>
<!-- CONTROLS -->
                    <td>
                  <% if current_user.present? %>
                      <!-- <div class="btn-group btn-group-md">
                        <%#= link_to icon('edit'), edit_pick_path(pick), class: "btn btn-sm btn-primary" %>
                      </div> -->

                      <div class="btn-group btn-group-md">
                        <%= link_to icon('refresh'), '#', class: "btn btn-sm btn-primary" %>
                      </div>
<!--
                      <div class="btn-group btn-group-md">
                        <%#= link_to icon('minus-circle'), pick_path(pick), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this pick? All changes are permanent!" } %>
                      </div> -->
                    </td>

                  <% end %>
                  <td>

                </tr>
                <% end %>
            </tbody>

          </table>

        </div>
      </div>

  </div>
</div>




